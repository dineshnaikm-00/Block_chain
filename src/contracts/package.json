{
  "name": "dao-content-moderation-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for DAO-based content moderation platform with quadratic voting and reputation system",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
